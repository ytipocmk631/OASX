<Window x:Class="OASX.WPF.Views.AddConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Configuration"
        Width="360" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Configuration name:" FontSize="13" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="NameBox" FontSize="14" Padding="6,4"
                 Text="{Binding ConfigName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Text="Copy from template:" FontSize="13" Margin="0,12,0,4"/>
        <ComboBox Grid.Row="3" x:Name="TemplateBox"
                  ItemsSource="{Binding Templates}"
                  SelectedItem="{Binding TemplateName}"
                  FontSize="13"/>

        <TextBlock Grid.Row="4" x:Name="ErrorLabel" Foreground="Red" FontSize="12" Margin="0,6,0,0"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,8,0"
                    IsCancel="True" Click="Cancel_Click"/>
            <Button Content="OK" Width="80"
                    IsDefault="True" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
