<UserControl x:Class="OASX.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer>
        <StackPanel HorizontalAlignment="Center" MaxWidth="440" Margin="0,24">

            <!-- Theme section -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Theme" FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Dark Mode" VerticalAlignment="Center"
                                   FontSize="13" Width="120"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        <ToggleButton IsChecked="{Binding IsDarkTheme}"
                                      Command="{Binding ToggleThemeCommand}"
                                      Width="56" Height="26"
                                      Content="{Binding IsDarkTheme, Converter={StaticResource BoolToOnOffConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Language section -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Language" FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#x4E2D;&#x6587;" Width="90" Margin="0,0,8,0"
                                Command="{Binding SwitchToChineseCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChineseLanguage}" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="English" Width="90"
                                Command="{Binding SwitchToEnglishCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChineseLanguage}" Value="False">
                                            <Setter Property="Background" Value="#1976D2"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Server control -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Server" FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <Button Content="Kill OAS Server"
                            Command="{Binding KillServerCommand}"
                            MinWidth="160"
                            Foreground="#F44336"
                            BorderBrush="#F44336"
                            Background="Transparent"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Account -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Account" FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <Button Content="Log Out"
                            Command="{Binding LogoutCommand}"
                            MinWidth="160"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
