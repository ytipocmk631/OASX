<Window x:Class="OASX.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OASX.WPF.Views"
        xmlns:vm="clr-namespace:OASX.WPF.ViewModels"
        mc:Ignorable="d"
        Title="OASX"
        Width="1100" Height="720"
        MinWidth="800" MinHeight="560"
        WindowStartupLocation="CenterScreen">

    <!-- DataTemplates to select the correct view for each ViewModel -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:OverviewViewModel}">
            <views:OverviewView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Navigation rail -->
            <ColumnDefinition Width="64"/>
            <!-- Script / config list -->
            <ColumnDefinition Width="180"/>
            <!-- Main content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Navigation Rail (leftmost column) ===== -->
        <Border Grid.Column="0" Background="#1976D2">
            <DockPanel>
                <!-- App logo / title -->
                <TextBlock DockPanel.Dock="Top"
                           Text="OAS" FontSize="14" FontWeight="Bold"
                           Foreground="White" TextAlignment="Center"
                           Padding="0,16"/>

                <!-- Bottom actions -->
                <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,12">
                    <!-- Add config -->
                    <Button ToolTip="Add Configuration"
                            Command="{Binding ShowAddConfigDialogCommand}"
                            Style="{StaticResource NavIconButtonStyle}">
                        <TextBlock Text="+" FontSize="22" Foreground="White" FontWeight="Bold"/>
                    </Button>
                    <!-- Settings -->
                    <Button ToolTip="Settings"
                            Command="{Binding ShowSettingsCommand}"
                            Style="{StaticResource NavIconButtonStyle}">
                        <TextBlock Text="âš™" FontSize="18" Foreground="White"/>
                    </Button>
                </StackPanel>

                <StackPanel/>
            </DockPanel>
        </Border>

        <!-- ===== Script list (second column) ===== -->
        <Border Grid.Column="1" Background="#EEEEEE" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Scripts" FontSize="13" FontWeight="SemiBold"
                           Foreground="#555555" Padding="12,10"/>
                <ListBox ItemsSource="{Binding ScriptNames}"
                         SelectedItem="{Binding SelectedScriptName}"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionChanged="ScriptList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="13"
                                       Padding="12,6"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#BBDEFB"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Rename" Click="MenuItem_Rename"/>
                            <MenuItem Header="Delete" Click="MenuItem_Delete"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ===== Main content area ===== -->
        <ContentControl Grid.Column="2"
                        Content="{Binding CurrentView}"
                        Margin="0"/>
    </Grid>
</Window>
