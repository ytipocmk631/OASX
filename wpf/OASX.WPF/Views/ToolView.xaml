<UserControl x:Class="OASX.WPF.Views.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer>
        <StackPanel HorizontalAlignment="Center" MaxWidth="360" Margin="20,20">

            <!-- Notification test card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Notification Test"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,14"/>

                    <!-- Config -->
                    <TextBlock Text="Config (YAML)"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding TestConfig, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             MinHeight="64"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Padding="6,4"
                             Margin="0,0,0,10"/>

                    <!-- Title -->
                    <TextBlock Text="Title"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding TestTitle, UpdateSourceTrigger=PropertyChanged}"
                             Padding="6,4"
                             Margin="0,0,0,10"/>

                    <!-- Content -->
                    <TextBlock Text="Content"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding TestContent, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             MinHeight="48"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Padding="6,4"
                             Margin="0,0,0,14"/>

                    <!-- Send button -->
                    <Button Content="Send Test"
                            Command="{Binding SendTestCommand}"
                            MinWidth="140"
                            HorizontalAlignment="Left"
                            Padding="12,6"/>

                    <!-- Status message -->
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ForegroundBrush}"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
