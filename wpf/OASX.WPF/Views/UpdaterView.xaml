<UserControl x:Class="OASX.WPF.Views.UpdaterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <ProgressBar IsIndeterminate="True" Height="3" VerticalAlignment="Top"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <ScrollViewer Margin="0,4,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,16" MaxWidth="700">

                <!-- Title row: status icon + branch + Execute Update button -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                    <DockPanel>
                        <!-- Update status icon -->
                        <TextBlock DockPanel.Dock="Left" FontSize="22" Margin="0,0,12,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="&#x2705;"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                            <Setter Property="Text" Value="&#x2B07;"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Status text -->
                        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock FontSize="15" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Already on the latest version"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                <Setter Property="Text" Value="New version available"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock FontSize="13"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}">
                                <Run Text="Branch: "/>
                                <Run Text="{Binding Branch}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Execute Update button -->
                        <Button DockPanel.Dock="Right"
                                Content="Execute Update"
                                Command="{Binding ExecuteUpdateCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                MinWidth="140"
                                Padding="12,6"/>
                    </DockPanel>
                </Border>

                <!-- Commit comparison table -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Commit Comparison" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Repo"
                                       FontWeight="SemiBold" FontSize="12"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="SHA  Author  Time  Message"
                                       FontSize="12" FontStyle="Italic"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="0,2"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Local"
                                       FontSize="12"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding CurrentCommitText}"
                                       FontSize="12" FontFamily="Consolas"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       TextWrapping="Wrap" Margin="0,2"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Remote"
                                       FontSize="12"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding LatestCommitText}"
                                       FontSize="12" FontFamily="Consolas"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       TextWrapping="Wrap" Margin="0,2"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Commit history (built in code-behind) -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Commit History" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,8"/>
                        <ItemsControl x:Name="CommitHistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontSize="12" FontFamily="Consolas"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               TextWrapping="Wrap" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Status message -->
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#F44336"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
