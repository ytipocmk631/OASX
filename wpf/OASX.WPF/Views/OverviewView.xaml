<UserControl x:Class="OASX.WPF.Views.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel: scheduler + running + pending + waiting -->
        <DockPanel Grid.Column="0" Margin="8">

            <!-- Scheduler card -->
            <Border DockPanel.Dock="Top" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{DynamicResource str_Scheduler}"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- State indicator dot -->
                    <Ellipse Grid.Column="1" Width="14" Height="14" Margin="8,0"
                             VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Script.State}" Value="Running">
                                        <Setter Property="Fill" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Script.State}" Value="Warning">
                                        <Setter Property="Fill" Value="#FF9800"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Script.State}" Value="Updating">
                                        <Setter Property="Fill" Value="#2196F3"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Script.State}" Value="Inactive">
                                        <Setter Property="Fill" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- Start / stop toggle button -->
                    <Button Grid.Column="2"
                            Command="{Binding ToggleScriptCommand}"
                            ToolTip="Start / Stop"
                            Style="{StaticResource IconButtonStyle}">
                        <TextBlock FontSize="18">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="&#x25B6;"/>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Script.State}" Value="Running">
                                            <Setter Property="Text" Value="&#x23F9;"/>
                                            <Setter Property="Foreground" Value="#F44336"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                </Grid>
            </Border>

            <!-- Running task card -->
            <Border DockPanel.Dock="Top" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="{DynamicResource str_Running}" FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,6"/>
                    <Separator Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding Script.RunningTask}"
                               FontSize="13"
                               Foreground="{DynamicResource ForegroundBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>

            <!-- Pending tasks card (fixed height) -->
            <Border DockPanel.Dock="Top" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Height="160">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="{DynamicResource str_Pending}"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,6"/>
                    <Separator DockPanel.Dock="Top" Margin="0,0,0,4"/>
                    <ListBox ItemsSource="{Binding Script.PendingTaskList}"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="12">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Padding="0,2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Waiting tasks card (expands to fill remaining space) -->
            <Border DockPanel.Dock="Top" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="{DynamicResource str_Waiting}"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,6"/>
                    <Separator DockPanel.Dock="Top" Margin="0,0,0,4"/>
                    <ListBox ItemsSource="{Binding Script.WaitingTaskList}"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="12">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Padding="0,2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- WebSocket status footer -->
            <Border DockPanel.Dock="Bottom" Padding="8,4"
                    Background="{DynamicResource SidebarBrush}">
                <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Run Text="{DynamicResource str_WS}"/>
                    <Run Text="{Binding WsStatusText}"/>
                </TextBlock>
            </Border>

            <StackPanel/>
        </DockPanel>

        <!-- Right panel: log -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="4,8,8,8">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,6">
                    <TextBlock Text="{DynamicResource str_Log}" FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <Button DockPanel.Dock="Right" Content="{DynamicResource str_Clear}"
                            Click="ClearLog_Click"
                            Style="{StaticResource IconButtonStyle}"
                            FontSize="12" Padding="8,2"/>
                </DockPanel>
                <Separator DockPanel.Dock="Top" Margin="0,0,0,4"/>
                <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LogList" ItemsSource="{Binding Logs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           FontSize="12" FontFamily="Consolas"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,1"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
